<div class="landing-container" style="text-align: center; padding: 4rem 1rem;">
  <div class="card" style="max-width: 500px; margin: 0 auto; padding: 3rem; text-align: left;">
    <h1 style="color: var(--primary-color); font-size: 2rem; margin-bottom: 2rem; text-align: center;">
      <%= t('layout.app_name') %>
    </h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, "E-mail" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "exemplo@email.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Palavra-passe" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group" style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
          <%= f.check_box :remember_me, style: "width: auto; margin: 0;" %>
          <%= f.label :remember_me, "Lembrar-me", style: "margin: 0; cursor: pointer;" %>
        </div>
      <% end %>

      <div class="actions" style="margin-top: 2rem;">
        <%= f.submit "Entrar", class: "btn" %>
      </div>
    <% end %>

    <div style="margin-top: 1.5rem; text-align: center;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<style>
  .landing-container {
    background: linear-gradient(135deg, var(--bg-color) 0%, #f0f4f8 100%);
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
