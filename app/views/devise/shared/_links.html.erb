<%- if controller_name != 'sessions' %>
  <%= link_to "Entrar", new_session_path(resource_name), style: "font-size: 0.85rem; color: var(--primary-color);" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registar conta", new_registration_path(resource_name), style: "font-size: 0.85rem; color: var(--primary-color);" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Esqueceu a sua palavra-passe?", new_password_path(resource_name), style: "font-size: 0.85rem; color: var(--text-secondary);" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Não recebeu as instruções de confirmação?", new_confirmation_path(resource_name), style: "font-size: 0.85rem; color: var(--text-secondary);" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Não recebeu as instruções de desbloqueio?", new_unlock_path(resource_name), style: "font-size: 0.85rem; color: var(--text-secondary);" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, style: "font-size: 0.85rem; color: var(--primary-color);" %><br />
  <% end %>
<% end %>
